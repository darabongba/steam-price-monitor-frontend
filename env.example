# 数据库配置
MONGODB_URI=mongodb://localhost:27017/steam-price-monitor
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/steam-price-monitor

# Redis缓存配置 (可选)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Steam API配置
STEAM_API_KEY=your-steam-api-key
STEAM_BASE_URL=https://store.steampowered.com

# 应用配置
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# 监控配置
PRICE_CHECK_INTERVAL=*/60 * * * *  # 每小时检查一次
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=1000  # 请求间隔(毫秒)

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15  # 分钟
RATE_LIMIT_MAX=100    # 最大请求次数

# 通知配置
EMAIL_FROM=Steam Price Monitor <noreply@steampricemonitor.com>
EMAIL_TEMPLATE_PATH=./templates/email

# 开发模式配置
DEBUG=steam-price-monitor:*
MOCK_STEAM_API=false

# Steam API 配置
VITE_STEAM_API_KEY=your_steam_api_key_here
VITE_STEAM_PROXY_URL=https://api.steampowered.com
VITE_STEAM_STORE_URL=https://store.steampowered.com

# Steam API 代理服务（用于解决CORS问题）
VITE_STEAM_PROXY_ENABLED=true
VITE_STEAM_PROXY_BASE_URL=https://your-proxy-domain.com

# EmailJS 配置
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# 应用配置
VITE_APP_NAME=Steam 游戏降价提醒
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=监控Steam游戏价格变化，及时获取降价通知

# 功能开关
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# 调试配置
VITE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false
VITE_LOG_LEVEL=info

# 缓存配置
VITE_CACHE_DURATION=300000
VITE_PRICE_CHECK_INTERVAL=3600000
VITE_MAX_CONCURRENT_REQUESTS=5

# 限制配置
VITE_MAX_ALERTS_PER_USER=100
VITE_MAX_GAMES_PER_SEARCH=50
VITE_RATE_LIMIT_REQUESTS=60
VITE_RATE_LIMIT_WINDOW=60000

# 外部服务
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# 开发环境配置
VITE_DEV_MOCK_API=false
VITE_DEV_SHOW_DEVTOOLS=true
VITE_DEV_HOT_RELOAD=true 